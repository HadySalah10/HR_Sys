@using HR_Sys.ViewModels 

@model TypesOfVactionViewModel 
@{
}

<section id="configuration">
         <div class="row">
            <div class="col-lg-12">
                <div class="card">
                     <div class="card-header">
                        <div class="card-title-wrap bar-success text-right">
                          <h4 class="card-title">اضافة مستخدم </h4>
                        </div>
                     </div>
           
                               
                     <div class="card-body">
                         <div class="px-3">
                             <form class="form form-horizontal" method="post">
                                 <div class="form-body">
                                     <div class="form-group row">
                                         <input type="hidden" asp-for="vacId" value="2" />
                                          <label class="col-md-2 label-control" asp-for="empId"> اسم الموظف </label>
                                          <div class="col-md-9">
                                              <select asp-items="@ViewBag.emps" asp-for="empId" class="form-control">
                                                  <option>اختار اسم الموظف</option>
                                              </select>
                                              <span asp-validation-for="empId"class="text-danger"></span>
                                          </div>
                                          
                                     </div>
                                    
                                     <div class="form-group row">
                                          <label class="col-md-2 label-control" asp-for="date">التاريخ </label>
                                          <div class="col-md-9">
                                              <input type="date" asp-for="date"  class="form-control" >
                                              <span asp-validation-for="date" class="text-danger"></span>
                                          </div>

                                     </div>
                                          
  
                                  </div>
                                  <div class="form-actions">
                                        <button type="button" class="btn btn-danger mr-1" onclick="return confirm('تأكيد الالغاء')">
                                             <i class="icon-trash"></i> الغاء
                                         </button>
                                         <button type="submit" class="btn btn-success">
                                             <i class="icon-note"></i> حفظ
                                         </button>
                                  </div>
                            </form>
                
                          </div>
                           
                     </div>
                    
  
              
             
                     
                                 
                                
                </div>
            </div>
         </div>
         
      </section>