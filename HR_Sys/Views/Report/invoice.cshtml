@model EmpReport
@{
    ViewData["Title"] = "invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
       <meta name="viewport" content="width=device-width" />
    <title>Invoice</title>
</head>
<body>
     <section class="invoice-template">
                    <div class="card">
                        <div class="card-body p-3">
                            <div id="invoice-template" class="card-block">
                                <!-- Invoice Company Details -->
                                <div id="invoice-company-details" class="row">
                                    <div class="col-6 text-right">
                                        <ul class="px-0 list-unstyled">
                                         <li class="text-bold-800">Pioneer Solutions Company </li>
                                         <li class="text-danger"> مستحقات الموظف </li>
                                            <li class="lead text-bold-800">@Model.Employees.empName</li>

                                           <li class="text-danger"> العنوان</li>
                                            <li class="lead text-bold-800">@Model.Employees.empAddress</li>

                                           
                                        </ul>
                                    </div>
                                    <div class="col-6 text-lef text-bold-700">
                                        
                                        <ul class="px-0 list-unstyled">
                                            <li class="text-danger"> الاساسى</li>
                                            <li class="lead text-bold-800">@Model.netSalary</li>

                                            <li class="text-danger">الرصيد الاجمالى</li>
                                            <li class="lead text-bold-800">@Model.Employees.empGrossSalary</li>
                                            <li class="text-danger"> قيمة الساعة</li>
                                            <li class="lead text-bold-800">@Model.Employees.requiredSalaryPerHour</li>

                                        </ul>
                                    </div>
                                </div>
                     
                                <!--/ Invoice Customer Details -->
                                <!-- Invoice Items Details -->
                                <div id="invoice-items-details" class="pt-2">
                                    <div class="row">
                                      <table class="table table-striped table-bordered zero-configuration mt-40">
                                        <thead>
                                            <tr>
                                      <th>اسم الموظف</th>
                                    <th>رقم الهاتف</th>
                                   
                                    <th>أيام الحضور</th>
                                    <th>أيام الغياب</th>
                                    <th>عدد الساعات الاضافية </th>
                                    <th> عدد ساعات الخصم</th>
                                    <th>الاضافي</th>
                                    <th> الخصم</th>
                                    
                                    
                                     
                                            </tr>
                                        </thead>
                                        <tbody>
                                           
                                        
                                          <tr>
                                         <td>@Model.Employees.empName</td>
                                        <td>@Model.Employees.phoneNum</td>
                                        
                                        <td>@Model.numAttendanceDays</td>
                                        <td>@Model.numAbsenceDays</td>
                                        <td>@Model.numOfExtraHours</td>
                                        <td>@Model.numOfDeductHours</td>
                                        <td>@Model.totalOfExtraPrice</td>
                                        <td>@Model.totalOfDeductionPrice</td>
                                       
                                              
                                            </tr>
                                   
                                          
                                      
                                                                                                                                                                                                                                                                                 
                                        </tbody>
                            
                                    </table>
                                    </div>
                                  
                                </div>
                                <!-- Invoice Footer -->
                               
                            </div>
                        </div>
                    </div>
                </section>
</body>