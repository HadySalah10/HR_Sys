@*@model HR_Sys.Models.annualHoliday
*@
@using HR_Sys.Models
@model List<annualHoliday>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-bold"> الأجازات الرسميه</h1>

<hr />

<form asp-action="Index" method="post">
    <table class="table">
        <div class="row">
             <div class="col-md-6">
                 <tr class="form-group">
                     <td><label asp-for="@Model[0].idHoliday" class="control-label"></label></td>
                     <td>
                     <select asp-for="@Model[0].idHoliday" class="form-control pl-5" asp-items="ViewBag.NameAnnualHoliday">
                     </select>
                     </td>
@*                   <td><input asp-for="NameAnnualHoliday.nameHoliday"  type="hidden" class="form-control" /></td>
*@                   <td> <span asp-validation-for="@Model[0].idHoliday" class="text-danger"></span></td>
                     
                     <td><label asp-for="@Model[0].dateHoliday" class="control-label"> </label></td>
                     <td><input type="date" asp-for="@Model[0].dateHoliday" class="form-control" /></td>
                     <td><span asp-validation-for="@Model[0].dateHoliday" class="text-danger"></span></td>
                 </tr>
             </div>
        </div> 
    </table>
    <br />
    <br />
    <div class="form-group text-center">
        <input type="submit"  class="btn btn-info" value="إضافة">
    </div> 
    <br />
    <!------------------------------------------- start table of HRS-------------------------------------->                    
    <table class="table text-center table-striped table-bordered zero-configuration">
        <thead>
            <tr>
                 <th>الاسم</th>
                 <th>التاريخ</th>
                 <th>العمليات </th>
            </tr>
        </thead>
        <tbody>
@*            (List<annualHoliday>) ViewBag.annulholiday
*@            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NameAnnualHoliday.nameHoliday</td>
                    <td>@item.dateHoliday</td>

                    <td>
                        <a asp-controller="AnnualHolidays" asp-action="Delete" onclick="return confirm('هل تريد مسح  الأجازه    @item.NameAnnualHoliday  ؟  ')"  asp-route-id="@item.id"><i class="fa fa-trash font-medium-4"></i></a> 
                    </td>
                </tr>
            }
            
        </tbody>            
    </table>
    <!------------------------------------------- end table of HRS-------------------------------------->  
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>  
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>  
}
