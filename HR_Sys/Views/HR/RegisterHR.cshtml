
@model HR_Sys.Models.HR

@{
    //Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>RegisterHR</title>
     
    </head>
    <body>
   
      <section id="configuration">
         <div class="row">
            <div class="col-lg-12">
                <div class="card">
                     <div class="card-header">
                        <div class="card-title-wrap bar-success">
                          <h4 class="card-title">اضافة مستخدم </h4>
                        </div>
                     </div>
           
                               
                     <div class="card-body">
                         <div class="px-3">
                             <form class="form form-horizontal">
                                 <div class="form-body">
                                     <div class="form-group row">
                                          <label class="col-md-3 label-control" asp-for="fullName">الاسم بالكامل : </label>
                                          <div class="col-md-9">
                                              <input type="text"  class="form-control" asp-for="fullName" placeholder="الاسم بالكامل ">
                                              <span asp-validation-for="fullName" class="text-danger"></span>
                                          </div>
                                          
                       

                                     </div>
                                     <div class="form-group row">
                                          <label class="col-md-3 label-control" asp-for="hrUserName">اسم المستخدم : </label>
                                          <div class="col-md-9">
                                              <input type="text" asp-for="hrUserName" id="projectinput1" class="form-control"  placeholder="اسم المستخدم ">
                                              <span asp-validation-for="hrUserName" class="text-danger"></span>
                                          </div>
                                          
                       

                                     </div>
                                     <div class="form-group row">
                                          <label class="col-md-3 label-control" asp-for="email">البريد الالكتروني </label>
                                          <div class="col-md-9">
                                              <input type="text" asp-for="email" id="projectinput1" class="form-control"  placeholder="البريد الالكتروني ">
                                              <span asp-validation-for="hrUserName" class="text-danger"></span>
                                          </div>
                                          
                       

                                     </div>



                                     <div class="form-group row">
                                         <label class="col-md-3 label-control" asp-for="password">كلمة المرور: </label>
                                         <div class="col-md-9">
                                          <input type="password" asp-for="password" id="projectinput4" class="form-control"  placeholder="كلمة المرور ">
                                          <span asp-validation-for="password" class="text-danger"></span>
                                      </div>
                                     </div>

                                     <div class="form-group row">
                                         <label class="col-md-3 label-control" asp-for="confirmPassword">كلمة المرور: </label>
                                         <div class="col-md-9">
                                          <input type="password" asp-for="confirmPassword" id="projectinput4" class="form-control"  placeholder="كلمة المرور ">
                                          <span asp-validation-for="confirmPassword" class="text-danger"></span>
                                      </div>
                                     </div>
                                     
                                          
                                     <div class="form-group row">
                                         <label class="col-md-3 label-control" asp-for="validationId">الصلاحيات: </label>
                                         <div class="col-md-9">
                                             <select asp-for="validationId" id="projectinput7"  class="form-control">
                                                  <option value="0" selected="" disabled="">Admin</option>
                                                  <option value="leman">hr system</option>
             
            
                                             </select>

                                        </div>
                                     </div>

                                      <br />
                                          <br />
  
                                  </div>
                             </form>
                
                          </div>
                     </div>
                 <div class="form-actions">
                                  <button type="button" class="btn btn-danger mr-1">
                                    <i class="icon-trash"></i> الغاء
                                  </button>
                                  <button type="button" class="btn btn-success">
                                    <i class="icon-note"></i> حفظ
                                  </button>
                 </div>
  
              
             
                     
                                 
                                
              </div>
           </div>
         </div>
      </section>

    </body>
</html>
