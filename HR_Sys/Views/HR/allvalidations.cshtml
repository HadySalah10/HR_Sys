@model IEnumerable<HR_Sys.Models.Validations>

@{
    ViewData["Title"] = "allvalidations";
}
<style>
        

            .pagination a {
                color: black;
                float: left;
                padding: 8px 16px;
                text-decoration: none;
                transition: background-color .3s;
                border: 1px solid #ddd;
                font-size: 20px;
                font-weight: bold; 
            }

                .pagination .active {
                        color: #2a75ff;
                        float: left;
                        padding: 8px 16px;
                        text-decoration: none;
                        transition: background-color .3s;
                        border: 1px solid #ddd;
                        font-size: 20px;
                        font-weight: bold;  
                }

                .pagination a:hover:not(.active) {
                    background-color: #ddd;
                }

        .container {
            padding-bottom: 3% !important;
        }

        .btn {
            margin-bottom: -12px !important;
        }
    </style>



<section id="configuration">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title text-center">كل الصلاحيات</h4>
                    </div>
                </div>
                <div class="card-body collapse show">
                    <div class="card-block card-dashboard" style="padding:1rem 20px">
                     
                            <div class="row">
                                <div class="col-md-3">
                                    
                                 </div>
                                
                                @if (HttpContextAccessor.HttpContext.Session.GetString("empAdd") == "True")
                                    {
                                        <div class="col-md-3">
                                            <button id="addRow" class="btn btn-primary mb-2"> 
                                                <i class="ft-plus"></i>&nbsp;
                                                <a asp-action="addvalidation" asp-controller="hr" target=""> إضافة صلاحية جديدة</a>
                                            </button>
                                        </div>
                                    }
                            </div>
                            <input id="pageNum" hidden value="@ViewBag.pageNum"/>

                            <br />
                      <!------------------------------------------- start table of Employee-------------------------------------->   
                      
                <table class="table table-striped table-bordered" >

                            <thead class="text-center">
                                <tr>
                                    <th >الاتاحة</th>
                                    <th >العمليات</th>
                                    
                                   
                                </tr>
                            </thead>
                            <tbody>
                           @if(Model!=null){
                                    @foreach(var item in Model)
                                    {
                                         <tr>
                                                <td style="text-align:center;">
                                                      <span>@item.validationName</span>
                                                </td>
                                            @if(item.id!=1){
                                                 <td style="text-align:center;">
                                                    <a asp-action="editvalidation" asp-route-id="@item.id">تعديل</a> |
                
                                                    <a asp-action="deletevalidation" asp-route-id="@item.id" onclick="return confirm('هل تريد حذف هذه المجموعه ؟  ')">حذف </a>
                                                    </td>
                                               
                                            }
                                           </tr>

                                           
                                    }        
                                }
                                                        
                                                                                                                                                                                                                                                                                                               </yr>
                            </tbody>
                        </table>

                                             
                        <!------------------------------------------- end table of Empolyees-------------------------------------->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


