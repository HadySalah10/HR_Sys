@model IEnumerable<HR_Sys.Models.Validations>

@{
    ViewData["Title"] = "allvalidations";
}

<section id="configuration" style="background-color:white">
    <h1 class="text-center" id="emptext1">كل الصلاحيات</h1>

<button class="btn btn-primary mb-2" style="position:relative; left:20px;"> 
   <i class="ft-plus"></i>&nbsp;
   <a asp-action="addvalidation" asp-controller="hr" target="_blank"> إضافة مجموعه جديد</a>
</button><br />
<table class="table text-center table-striped table-bordered zero-configuration">
    <thead>
        <tr>
            <th>
                الاسم
            </th>
            <th>
                الاجراءات
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.validationName)
            </td>
           
            <td>
               <button class="btn btn-info mb-2"> 
                  <a asp-action="editvalidation"  asp-route-id="@item.id">تعديل</a>
               </button>&nbsp; &nbsp;| &nbsp;

               <button class="btn btn-danger mb-2"> 
                 <a asp-action="deletevalidation" asp-route-id="@item.id" onclick="return confirm('هل تريد حذف هذه المجموعه @item.validationName ؟ ')">حذف</a>
               </button>
            </td>
              
        </tr>
}
    </tbody>
</table>
</section>
