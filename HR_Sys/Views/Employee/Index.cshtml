
@model List<Employee>
@{
    ViewData["Title"] = "Index";
}


<section id="configuration">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title text-center">معلومات الموظفين</h4>
                    </div>
                </div>
                <div class="card-body collapse show">
                    <div class="card-block card-dashboard" style="padding:1rem 20px">
                     
                            <div class="row"><div class="col-sm-12 col-md-3">
                                <div class="dataTables_length" id="DataTables_Table_0_length">
                                     <label>عرض 
                                   <select name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" class="form-control form-control-sm">
                                        <option value="10">10</option>
                                        <option value="25">25</option>
                                        <option value="50">50</option>
                                        <option value="100">100</option>
                                     </select>
                                    </label>
                                </div>
                                </div>
                                      <div class="col-lg-1"></div> 
                                        <form>
                                        <div class="col-sm-12 col-md-8">
                                            <div id="DataTables_Table_0_filter" class="dataTables_filter">
                                                <label>بحث:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="DataTables_Table_0" name="searchString"></label>
                                            </div>
                                            <div id="DataTables_Table_0_filter" class="dataTables_filter">
                                                <input type="submit" class="btn btn-info"  name="searchString" value="search">
                                            </div>
                                        </div>
                                      </form>
                                <div class="col-lg-1"></div>
                                @if (HttpContextAccessor.HttpContext.Session.GetString("empAdd") == "True")
                            {
                                <div class="col-lg-3">
                                    <button id="addRow" class="btn btn-primary mb-2"> 
                                        <i class="ft-plus"></i>&nbsp;
                                        <a asp-controller="employee" asp-action="create" target=""> إضافة مستخدم جديد</a>
                                    </button>
                                </div>
                            }
                        </div>
                        <br />
                      <!------------------------------------------- start table of Employee-------------------------------------->   
                        <table class="table table-striped table-bordered" >

                            <thead class="text-center">
                                <tr>
                                    <th >الاسم</th>
                                    <th>رقم التليفون</th>
                                    <th>رقم اخر</th>
                                    <th>تاريخ الميلاد </th>
                                    <th>تاريخ التعاقد</th>
                                    <th>المرتب</th>
                                    <th>وقت الحضور</th>
                                    <th>وقت الانصراف</th>
                                    <th>الجنسيه</th>
                                    <th>إجراءات</th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                          
                                    @foreach(var item in Model)
                                    {
                                         <tr>
                                                <td >
                                                      <span>@item.empName</span>
                                                </td>
                                                <td>
                                                    @item.phoneNum
                                                </td>
                                                <td>@item.phoneNum2</td>
                                                <td>@item.empDateOfBirth.ToString("dd/MM/yyyy")</td>
                                            
                                                <td>@item.empHireDate.ToString("dd/MM/yyyy")</td>
                                                    <td>@item.empNetSalary</td>
                                                    <td> @item.requiredAttendanceTime.ToShortTimeString()</td>
                                                    <td> @item.requiredDepartureTime.ToShortTimeString() </td>
                                                    <td>@item.Nationality.nationalityName</td>

                                                    <td class="text-center">
                                                         @if (HttpContextAccessor.HttpContext.Session.GetString("empEdit") == "True")
                                                         {
                                                             <a class="btn btn-success mb-2" asp-controller="Employee" asp-action="Edit" asp-route-id="@item.id">تعديل</a>
                                                         }   
                                                           @if (HttpContextAccessor.HttpContext.Session.GetString("empDelete") == "True")
                                                         {
                                                              <a class="btn btn-danger mb-2" asp-controller="Employee"  onclick="return confirm('هل تريد مسح  الموظف    @item.empName  ؟  ')" asp-action="delete" asp-route-id="@item.id">حذف</a>
                                                          }
@*                                                     <a class="btn btn-info mb-2" asp-controller= "Employee" asp-action="Editsettings" asp-route-id="@item.id">تعديل الاعدادات</a>
*@                                                
                                                    </td>
                                            </tr>
                                    }                                 

                            
                                

                                                                                                                                                                                                                                                                                                               </yr>
                            </tbody>
                        </table>
                        <!------------------------------------------- end table of Empolyees-------------------------------------->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


   

     